{
  "name": "spotter",
  "version": "0.0.1",
  "description": "Spotter App",
  "main": "app.js",
  "scripts": {
    "watch": "watchify app.js -o public/bundle/js/bundle.js -v",
    "watch-css": "catw public/css/*.css -o public/bundle/css/bundle.css -v && cleancss -o public/bundle/css/bundle.css public/css/main.css",
    "browserify": "browserify app.js | uglifyjs > public/bundle/js/bundle.js",
    "build": "npm run browserify ",
    "start": "npm run watch & npm run watch-css & nodemon server.js"
  },
  "keywords": [
    "spotter"
  ],
  "author": "Robert Daly",
  "license": "MIT",
  "dependencies": {
    "express": "^4.13.4",
    "node-jsx": "^0.13.3",
    "react": "^15.0.2",
    "react-dom": "^15.0.2"
  },
  "devDependencies": {
    "browserify": "^13.0.0",
    "catw": "^1.0.1",
    "clean-css": "^3.4.12",
    "nodemon": "^1.9.2",
    "reactify": "^1.1.1",
    "uglify-js": "^2.6.2",
    "watchify": "^3.7.0"
  },
  "browserify": {
    "transform": [
      "reactify"
    ]
  }
}
